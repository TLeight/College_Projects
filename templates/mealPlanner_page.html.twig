{% extends 'app.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class = "mealPlannerHero_picture"></div>
<main>

<div class = "mealPlanner">

<h1>Meal/Activity Planner</h1>

<section>
   <ul>
      {% for mealPlan in mealPlan %}
      <li>
          <div class = "dietName">
            {{mealPlan.dietName}}
          </div>
          <div class = "dietDesc">
            {{mealPlan.dietDescription}}
          </div>
      </li>
      {% endfor %}
    </ul>
</section>


</div>

</main>
{% endblock %}
