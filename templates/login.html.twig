{% extends 'app.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class = "login_regesterHero_picture"></div>
    <div class = "login_regesterMain">
        <main>
            {% if error %}
                <div class = "loginError">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class = "login_regesterPage">
                <div class = "login_Page">
                    <form action="{{ path('app_login') }}" method="post">
                        <h1>Login</h1>
                        <div class = "loginText">
                            <div class = "username_login">
                                <!--Label and text box for username -->
                                <label for="username">Username:</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required>
                            </div>
                            <br>
                            <div class = "password_login">
                                <!--Label and text box for password -->
                                <label for="password">Password:</label>
                                <input type="password" id="password" name="_password" required>
                            </div>
                            <br>
                            {# If you want to control the URL the user is redirected to on success
                            <input type="hidden" name="_target_path" value="/account"> #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <!--Button for login form -->
                            <button type="submit">login</button>
                            <br>
                            <br>
                            <div class = "registerlink">
                            <br>
                            <!--Link to register page -->
                                <a href="{{path('app_register') }}">Need an account?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
